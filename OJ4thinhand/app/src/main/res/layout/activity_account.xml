<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/index_title_divider"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="195dp"
             />
        <TextView
            android:id="@+id/myTreasure"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="我的收藏"
            android:onClick="watchTreasure"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="200dp"
            />
        <View
            android:id="@+id/index_title_divider_2"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="285dp"
            />
        <TextView
            android:id="@+id/myMessage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="我的消息"
            android:fontFamily="casual"
            android:gravity="center"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="290dp"
            />
        <View
            android:id="@+id/index_title_divider_3"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="375dp"
            />
        <TextView
            android:id="@+id/chooseTopic"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="主题选择"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="380dp"
            android:onClick="watchTopic"
            />
        <View
            android:id="@+id/index_title_divider_4"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="465dp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="500dp">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:fontFamily="casual"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="logOut"
            />
</LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>